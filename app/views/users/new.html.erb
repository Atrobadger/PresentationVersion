<div class="row justify-content-md-center mt-5">
    <div class="col-4">
        <%= form_tag signup_path do |form| %>
        <div class="form-group">
            <% if @errors != nil %>
            <div class="alert alert-danger" role="alert">
                <% @errors.each do |error| %>
                <div><%= error %></div>
                <% end %>
            </div>
            <% end %>
        </div>
        <div class="form-group">
            <label><%= label_tag :firstname %></label>
            <%= text_field_tag :firstname, "", class: 'form-control' %>
            <small id="firstNameHelp" class="form-text text-muted">Enter your first name</small>
        </div>
        <div class="form-group">
            <label><%= label_tag :lastname %></label>
            <%= text_field_tag :lastname, "", class: 'form-control' %>
            <small id="lastNameHelp" class="form-text text-muted">Enter your full name</small>
        </div>
        <div class="form-group">
            <label><%= label_tag :password %></label>
            <%= password_field_tag :password, "", class: 'form-control' %>
            <small id="passwordHelp" class="form-text text-muted">Enter your password</small>
        </div>
        <div class="form-group">
            <label><%= label_tag :phonenumber %></label>
            <%= text_field_tag :phonenumber, "", class: 'form-control' %>
            <small id="phonenumberHelp" class="form-text text-muted">Enter your phonenumber</small>
        </div>
        <div class="form-group">
            <label><%= label_tag :emailaddress %></label>
            <%= text_field_tag :emailaddress, "", class: 'form-control' %>
            <small id="emailHelp" class="form-text text-muted">Enter your email address</small>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <% end %>
    </div>
</div>